{% extends 'Admin/layoutAdmin.html.twig' %}
{% block content %}
    <div class="container pt-5">
        <div class="row justify-content-center">
            <h1>Marques</h1>
        </div>
    <div class="row justify-content-center pt-5">
        <a href="/admin/brand/add" class="btn btn-success btn-lg active" role="button" aria-pressed="true">Ajouter</a>
    </div>
    <div class="row justify-content-around pt-5">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Nom de la marque</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
            <tbody>
            {% for brand in brands %}
            <tr>
                <td>{{ brand.name }}</td>
                {% if brand.picture is not empty %}
                    <td><img src="assets/images/BrandImages/{{ brand.picture }}" alt="Photo de la marque correspondante"></td>
                {% else %}
                    <td><a href="https://placeholder.com"><img src="https://via.placeholder.com/150x150" alt=""></a></td>
                {% endif %}
                <td><a href="#" class="btn btn-secondary btn-md active mr-5 mt-5">Modifier</a></td>
                <td><a href="#" class="btn btn-danger btn-md active mt-5">Supprimer</a></td>
            </tr>
            </tbody>
            {% endfor %}
    </div>

</div>
{% endblock %}